\setbeamerfont{meeting info}{parent=title page info,series=\bfseries,shape=\itshape}
\setbeamerfont{affiliation info}{parent=title page info}

%meeting info
\setbeamerfont{date}{parent=meeting info}
\setbeamerfont{meeting}{parent=meeting info}
\setbeamerfont{location}{parent=meeting info}

%author
